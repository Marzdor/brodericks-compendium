* {
  box-sizing: border-box;
}

body {
  margin: 0;
  padding: 0;
  font-family: sans-serif;
  font-family: "Open Sans", sans-serif;
  color: #08090a;
  background-color: $mainBackroundColor;
  @mixin atLarge {
    width: 80%;
    margin: 0 auto;
    overflow-y: hidden;
  }
}
p {
  font-size: 1.125rem;
}
input:focus,
select:focus,
textarea:focus,
button:focus {
  outline: none;
}
a {
  text-decoration: none;
  color: $borderColor;
}
