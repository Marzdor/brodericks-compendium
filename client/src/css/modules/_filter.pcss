.filter {
  &-checkbox {
    @mixin atSmall {
      margin: 5px 10px 0 0;
    }
  }
  &-btn {
    @mixin atSmall {
      margin: 20px 0 5px 0;
    }
  }
  &--loc {
    @mixin atSmall {
      grid-column: 1;
      grid-row: 2;
      justify-self: center;
    }
  }
  &--rar {
    @mixin atSmall {
      grid-column: 2;
      grid-row: 2;
      justify-self: center;
    }
  }
  &--hide {
    @mixin atSmall {
      display: none;
    }
  }
}
