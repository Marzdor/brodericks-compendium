.container {
  @mixin atSmall {
    display: flex;
    flex-direction: column;
  }
  @mixin atLarge {
    display: grid;
    grid-template-columns: 15vw auto;
  }
  &-plant {
    @mixin atLarge {
      background-color: $mainBackroundColor;
      height: 95vh;
      overflow-y: scroll;
      overflow-x: hidden;
    }
  }
}
