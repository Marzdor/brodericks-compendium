.plant {
  @mixin atSmall {
    text-align: center;
  }
  &-desc {
    @mixin atSmall {
      text-align: justify;
      width: 95%;
      margin: 0 auto;
      grid-column: 1 / span 2;
      line-height: 1.5;
    }
  }
  &-name {
    @mixin atSmall {
      text-align: center;
      border: 3px solid black;
      border-bottom: 0;
      padding: 10px;
      margin: 0;
      cursor: pointer;
    }
  }
  &-title {
    &-loc {
      @mixin atSmall {
        grid-column: 2;
        grid-row: 2;
      }
    }
  }
}
