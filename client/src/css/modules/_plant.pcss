.plant {
  @mixin atSmall {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    margin: 50px auto auto auto;
    text-align: center;

    &-title {
      margin: 15px;
      &-sub {
        margin: 15px;
      }
    }
    &-name {
      grid-column: span 2;
      justify-self: center;
      margin: 0;
    }
    &-des {
      grid-column: span 2;
      text-align: justify;
      width: 90%;
      margin: 0 auto;
      line-height: 1.25;
    }
  }
}
